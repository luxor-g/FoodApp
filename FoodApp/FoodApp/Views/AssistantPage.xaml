<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
						 xmlns:views="clr-namespace:FoodApp.Views"
						 x:Class="FoodApp.Views.AssistantPage"
						 Shell.NavBarIsVisible="False">

	<ContentPage.BackgroundColor>
		<Color>#222</Color>
	</ContentPage.BackgroundColor>

	<ContentPage.Content>
		<Grid>
			<AbsoluteLayout>
				<Image Style="{StaticResource flower}"/>
			</AbsoluteLayout>

			<StackLayout VerticalOptions="Fill" Margin="0,0,0,0" Spacing="0">
				<StackLayout Margin="0,15,15,10" VerticalOptions="Start" Orientation="Horizontal">
					<views:BackButtonView/>
					<Label Text="Asistente" Style="{StaticResource titleLeft}"/>
					<!-- <views:MicroButtonView/> -->
				</StackLayout>

				<Grid Margin="0,150,0,0">
					<Image Source="background_sound.png"/>
					<Label Text="" FontFamily="Segoe" FontSize="80" TextColor="{StaticResource white_color}" HorizontalOptions="Center"/>
				</Grid>

				<Label Text="¿Como puedo ayudarte?" FontSize="20" TextColor="{StaticResource white_color}" HorizontalTextAlignment="Center" Margin="0,50,0,0"/>

				<Label x:Name="label"/>

			</StackLayout>
		</Grid>
	</ContentPage.Content>
</ContentPage>
