<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodApp.Views.PasswordView">
  <ContentView.Content>
		<Grid>
			<Entry x:FieldModifier="public" x:Name="Entry" Placeholder="Contraseña" Keyboard="Text" ReturnType="Done" IsSpellCheckEnabled="False" IsTextPredictionEnabled="False" IsPassword="true" MaxLength="32"/>
			<Button x:Name="Button" Clicked="OnButtonClicked" BackgroundColor="Transparent" Style="{StaticResource transparentButton}" HorizontalOptions="End" Text="" FontFamily="Segoe" WidthRequest="40" TextColor="{StaticResource white_color}"/>
		</Grid>
  </ContentView.Content>
</ContentView>
