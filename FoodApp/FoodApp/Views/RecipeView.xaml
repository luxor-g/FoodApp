<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodApp.Views.RecipeView">
  <ContentView.Content>
		<Grid>
			<StackLayout Spacing="0" Margin="0,0,0,30">
				<Image Aspect="AspectFit" Source="TEMP.png"/>
				<Label Text="Ensalada de tomate" TextColor="{StaticResource white_color}" FontSize="20" Margin="35,5,35,0"/>
				<StackLayout Orientation="Horizontal" Margin="35,0,35,0">
					<Label Text="Tipo" FontSize="14" x:Name="Type"/>
					<Label Text="·" FontSize="14"/>
					<Label Text="" Style="{StaticResource icon}"/>
					<Label Text="1 min" FontSize="14" x:Name="Time"/>
					<Label Text="·" FontSize="14"/>
					<Label Text="" Style="{StaticResource icon}" TextColor="{StaticResource primary_color}" x:Name="HeartIcon"/>
					<Label Text="0" FontSize="14" TextColor="{StaticResource primary_color}" x:Name="HeartsCount"/>
				</StackLayout>
			</StackLayout>

			<Button CornerRadius="0" BackgroundColor="Transparent" Clicked="OnClicked"/>

		</Grid>
  </ContentView.Content>
</ContentView>
