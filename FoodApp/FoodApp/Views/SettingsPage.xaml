				<Button Text=" Cerrar Sesión" Style="{StaticResource settingButton}" BackgroundColor="{StaticResource background_color}"/>

				<Button Text=" Asistente" Style="{StaticResource settingButton}" IsEnabled="False" BackgroundColor="#333"/>
				<Button Text=" Subtítulos" Style="{StaticResource settingButton}" BackgroundColor="{StaticResource background_color}"/>
				<Button Text=" fdsfdsfds" Style="{StaticResource settingButton}" BackgroundColor="{StaticResource background_color}"/>
